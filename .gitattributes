# Set default behavior for text files
* text=auto

# Python files
*.py text eol=lf

# JavaScript files
*.js text eol=lf

# React files
*.jsx text eol=lf
*.tsx text eol=lf

# JSON files
*.json text eol=lf

# CSS files
*.css text eol=lf

# HTML files
*.html text eol=lf

# Markdown files
*.md text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Ignore binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary